<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" style="@style/LineLinearLayout"
    android:layout_width="match_parent" android:orientation="vertical">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:maxLines="1"
            style="@style/BaseText"
            android:ellipsize="end"
            android:layout_weight="16"
            android:layout_width="0dp"
            android:id="@+id/transactSum"/>

        <TextView
            android:maxLines="1"
            style="@style/StdText"
            android:layout_weight="22"
            android:layout_width="0dp"
            android:id="@+id/transactWhen"/>

        <ImageView
            android:id="@+id/transactCircle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        style="@style/BaseText"
        android:id="@+id/transactWhat"
        android:layout_width="wrap_content"/>

</LinearLayout>